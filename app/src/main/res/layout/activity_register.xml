<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/activity_tool_bar" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="168px"
        android:layout_marginTop="70px"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/iv_register_photo"
            android:layout_width="47px"
            android:layout_height="47px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70px"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/login_counrty_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="44px"
            android:layout_toRightOf="@+id/iv_register_photo"
            android:text="中国"
            android:textColor="#323232"
            android:textSize="53px" />

        <ImageView
            android:id="@+id/iv_register_more"
            android:layout_width="21px"
            android:layout_height="42px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="70px"
            android:src="@drawable/icon_point_newpaget" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="31px"
            android:layout_toLeftOf="@+id/iv_register_more"
            android:text="+86"
            android:textColor="#323232"
            android:textSize="38px" />

    </com.zhy.autolayout.AutoRelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="42px"
        android:textColor="#f0f0f0" />


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="168px"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="37px"
            android:layout_height="70px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="75px"
            android:scaleType="centerCrop"
            android:src="@drawable/login_mobile_icon" />

        <EditText
            android:id="@+id/et_register_phone"
            android:layout_width="match_parent"
            android:layout_height="75px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="44px"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="#cccccc"
            android:textCursorDrawable="@drawable/shape_register_editext"
            android:textSize="52px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="42px"
        android:textColor="#f0f0f0" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="168px"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="37px"
            android:layout_height="70px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="75px"
            android:src="@drawable/login_pwd_icon" />

        <EditText
            android:id="@+id/et_register_pass"
            android:layout_width="0px"
            android:layout_height="75px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="44px"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textColor="#cccccc"
            android:textCursorDrawable="@drawable/shape_register_editext"

            android:textSize="52px" />

        <ImageView
            android:layout_width="147px"
            android:layout_height="77px"
            android:layout_marginRight="70px"
            android:layout_gravity="center_vertical"
            android:src="@drawable/login_mingw_icon" />
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:id="@+id/register_btn"
        android:layout_width="match_parent"
        android:layout_height="168px"
        android:layout_marginLeft="42px"
        android:layout_marginRight="42px"
        android:layout_marginTop="70px"
        android:background="@drawable/shape_register_btn_32"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/colorWhite"
        android:textSize="54px"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="79px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用有宠，就表示你同意有宠的"
            android:textColor="#999999"
            android:textSize="39px"/>

        <TextView
            android:id="@+id/register_agree"
            android:layout_width="168px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3px"
            android:drawableBottom="@drawable/shape_register_agreebottom"
            android:gravity="center"
            android:text="用户协议"
            android:textColor="#666666"
            android:textSize="39px"/>
    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>