<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_guide"
        android:layout_width="match_parent"
        android:layout_height="1448px" />


    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="21px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="114px">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/father_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shape_white_circle" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="31px"
                android:src="@drawable/shape_white_circle" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="31px"
                android:src="@drawable/shape_white_circle" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="31px"
                android:src="@drawable/shape_white_circle" />
        </com.zhy.autolayout.AutoLinearLayout>

        <ImageView
            android:id="@+id/shape_red_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shape_red_circle" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="167px"
        android:layout_marginLeft="413px"
        android:layout_marginRight="413px"
        android:layout_marginTop="121px"
        android:background="@drawable/shape_btn_red"
        android:text="注册"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="167px"
        android:layout_marginLeft="413px"
        android:layout_marginRight="413px"
        android:layout_marginTop="42px"
        android:background="@drawable/shape_btn_white"
        android:text="登陆"
        android:textColor="@color/colorPet" />

</com.zhy.autolayout.AutoLinearLayout>